<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_adapter_list_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        android:src="@drawable/detail_show_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="蓝月亮洗衣液3kg亮薰+3袋1kg+500翻盖+3瓶80g大包装 "
            android:textColor="@color/tv_Black"
            />
        
        <TextView 
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="￥88.0元  包邮"
            android:textColor="@color/tv_Red"
            />
        <TextView 
            android:id="@+id/sale_num"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.8万人付款     北京"
            android:textSize="13sp"
            />
        
        
        
        
    </LinearLayout>

</LinearLayout>